%h1 Listing books
.search-box
  = render 'search_form'
%table.table.striped
  %thead
    %tr
      %th Name
      %th Author
      %th Subject
  %tbody
    -#- @books.each do |book|
      %tr
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
