= form_tag search_path, method: :get, :html => { :class => 'form-horizontal' } do
  .form-actions
    = text_field_tag :query, params[:query], placeholder: 'Book', class: 'form-control', id: 'query-text-field'
    = select_tag :category, options_for_select(["Name", "Author", "Subject"],"Name"), class: 'btn'
    = submit_tag 'Go', :class => 'btn btn-primary'
